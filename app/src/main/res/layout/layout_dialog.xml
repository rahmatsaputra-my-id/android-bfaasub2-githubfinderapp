<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="25dp"
    android:layout_marginEnd="25dp"
    android:background="@drawable/layout_white_background">

    <ImageView
        android:id="@+id/image_view_error"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginTop="21dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_cancel_red_24dp"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/text_view_tittle_error"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/range_full"
        android:text="No Internet Connection"
        android:textAlignment="center"
        android:textColor="@color/colorRed"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_view_error" />

    <TextView
        android:id="@+id/text_view_description_error"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="31dp"
        android:text="Please make sure you're connect to Internet"
        android:textAlignment="center"
        android:textColor="#8E8E8E"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="@+id/text_view_tittle_error"
        app:layout_constraintStart_toStartOf="@+id/text_view_tittle_error"
        app:layout_constraintTop_toBottomOf="@+id/text_view_tittle_error" />


    <Button
        android:id="@+id/button_back_error"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="47dp"
        android:layout_marginBottom="22dp"
        android:background="@drawable/layout_button_enable"
        android:text="Kembali"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/text_view_description_error"
        app:layout_constraintStart_toStartOf="@+id/text_view_description_error"
        app:layout_constraintTop_toBottomOf="@+id/text_view_description_error"
        app:layout_goneMarginEnd="47dp" />

</androidx.constraintlayout.widget.ConstraintLayout>